set -e

VERSION="$1"
SOURCE_TMP="/tmp/.csvql"
SOURCE="$HOME/.csvql"
BASH_PROFILE="$HOME/.csvql_profile"

if [ -z "$VERSION" ]; then
	VERSION="main"
fi

if [ -d "$SOURCE_TMP" ]; then
	rm -rf $SOURCE_TMP
fi

(git clone -b $VERSION git@github.com:adrianolaselva/csvql.git $SOURCE_TMP && cd $SOURCE_TMP && make build)

chmod +x "$SOURCE_TMP/csvql"
mkdir -p "$SOURCE/bin/"
cp "$SOURCE_TMP/csvql" "$SOURCE/bin/"
rm -rf $SOURCE_TMP

if [ -d "$BASH_PROFILE" ]; then
	rm -rf $BASH_PROFILE
fi

touch "$BASH_PROFILE"
echo -e "export PATH=\"$SOURCE/bin:$PATH\"" > $BASH_PROFILE
source $BASH_PROFILE

CSVQL_BIN=$(which csvql)
echo "csvql install path: ${CSVQL_BIN}"
echo "Successfully installed csvql version $VERSION!!!"